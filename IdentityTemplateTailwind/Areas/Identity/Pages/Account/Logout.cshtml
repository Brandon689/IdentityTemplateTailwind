@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header class="mb-6">
    <h1 class="text-3xl font-bold mb-4">@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="text-blue-600 hover:text-blue-800 underline bg-transparent border-none cursor-pointer">Click here to Logout</button>
            </form>
        }
        else
        {
            <p class="text-lg text-gray-700">You have successfully logged out of the application.</p>
        }
    }
</header>
