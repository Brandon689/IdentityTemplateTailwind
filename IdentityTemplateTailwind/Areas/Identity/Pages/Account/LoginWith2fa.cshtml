@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<h1 class="text-3xl font-semibold mb-4">@ViewData["Title"]</h1>
<hr class="mb-6" />
<p class="mb-6">Your login is protected with an authenticator app. Enter your authenticator code below.</p>
<div class="flex flex-wrap -mx-3">
    <div class="w-full md:w-1/3 px-3">
        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <input asp-for="RememberMe" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4" role="alert"></div>
            <div class="mb-4">
                <label asp-for="Input.TwoFactorCode" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.TwoFactorCode" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="off" />
                <span asp-validation-for="Input.TwoFactorCode" class="text-red-600 text-sm"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Input.RememberMachine" class="inline-flex items-center">
                    <input asp-for="Input.RememberMachine" class="form-checkbox h-5 w-5 text-blue-600" />
                    <span class="ml-2 text-sm text-gray-700">@Html.DisplayNameFor(m => m.Input.RememberMachine)</span>
                </label>
            </div>
            <div>
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded">Log in</button>
            </div>
        </form>
    </div>
</div>
<p class="mt-6">
    Don't have access to your authenticator device? You can
    <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl" class="text-blue-600 hover:text-blue-800">log in with a recovery code</a>.
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
