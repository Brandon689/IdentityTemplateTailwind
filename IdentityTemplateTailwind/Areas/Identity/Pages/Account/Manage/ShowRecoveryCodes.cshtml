@page
@model ShowRecoveryCodesModel
@{
    ViewData["Title"] = "Recovery codes";
    ViewData["ActivePage"] = "TwoFactorAuthentication";
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3 class="text-2xl font-semibold mb-4">@ViewData["Title"]</h3>
<div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-4" role="alert">
    <p class="font-semibold mb-2">
        Put these codes in a safe place.
    </p>
    <p>
        If you lose your device and don't have the recovery codes you will lose access to your account.
    </p>
</div>
<div class="grid grid-cols-2 gap-4">
    @for (var row = 0; row < Model.RecoveryCodes.Length; row += 2)
    {
        <code class="bg-gray-100 px-2 py-1 rounded">@Model.RecoveryCodes[row]</code>
        <code class="bg-gray-100 px-2 py-1 rounded">@Model.RecoveryCodes[row + 1]</code>
    }
</div>
