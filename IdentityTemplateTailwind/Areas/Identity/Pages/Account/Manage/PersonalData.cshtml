@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-2xl font-semibold mb-4">@ViewData["Title"]</h3>

<div class="flex flex-wrap -mx-3">
    <div class="w-full md:w-1/2 px-3">
        <p class="mb-4">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p class="mb-4">
            <strong class="font-semibold text-red-600">Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mb-4">
            <button class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" type="submit">Download</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded inline-block">Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
