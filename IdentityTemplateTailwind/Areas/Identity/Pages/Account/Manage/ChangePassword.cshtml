@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-2xl font-semibold mb-4">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="flex flex-wrap -mx-3">
    <div class="w-full md:w-1/2 px-3">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4" role="alert"></div>
            <div class="mb-4">
                <label asp-for="Input.OldPassword" class="block text-sm font-medium text-gray-700 mb-1">Old Password</label>
                <input asp-for="Input.OldPassword" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
                <span asp-validation-for="Input.OldPassword" class="text-red-600 text-sm"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Input.NewPassword" class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
                <input asp-for="Input.NewPassword" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
                <span asp-validation-for="Input.NewPassword" class="text-red-600 text-sm"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm New Password</label>
                <input asp-for="Input.ConfirmPassword" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-sm"></span>
            </div>
            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
